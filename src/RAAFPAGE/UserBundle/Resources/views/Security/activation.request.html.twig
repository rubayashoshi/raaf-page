{% extends 'RAAFPAGEUserBundle::seller.html.twig' %}

{% block page_css %}
    {% stylesheets output="bundles/UserBundle/css/login.css"
    '@RAAFPAGEUserBundle/Resources/public/css/login.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet">
    {% endstylesheets %}
{% endblock %}
{% block content %}
    {% block page_content %}
        <div id="login-page-container">
            <div id="login-form-container">
                {% if error is defined %}
                    <div id="error-message">{{ error }}</div>
                {% endif %}

                {% if success is defined and success == 'success' %}
                    <div class="activation-request-success">An email with account activation link has been sent</div>
                {% else %}
                    <form action="{{ path('account_activation_request') }}" method="post">
                        <label for="email">Email address</label>
                        <input type="text" id="email" name="email">
                        <div id="lower">
                            <input type="submit" value="Login">
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    {% endblock %}
{% endblock %}