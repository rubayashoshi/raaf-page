{% extends 'RAAFPAGEAdBundle::layout.html.twig' %}
{% block page_css %}
    {% stylesheets output="bundles/adBundle/css/ad-list.css"
    '@RAAFPAGEAdBundle/Resources/public/css/ad-list.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet">
    {% endstylesheets %}
    <link href="{{ asset('bundles/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet"/>
{% endblock %}

{% block page_content %}
    <div class="ad-type-filter">
        <div class="add-type">
            {% if status != 'archived' %}<a class="btn btn-success btn-large" href="{{ path('ad_list', {'status' : 'archived'}) }}">Archived ads</a>{% else %}<p class="btn btn-success btn-large active">Archived ads</p>{% endif %}
            </div>
        <div class="add-type">
            {% if status != 'live' %}<a class="btn btn-success btn-large" href="{{ path('ad_list', {'status' : 'live'}) }}">Live ads</a>{% else %}<p class="btn btn-success btn-large active">Live ads</p>{% endif %}
        </div>
    </div>
    {#{% set total = 4 %}#}
    {#You current have {{ total }} ads {{ status }}#}

    {% for ad in ads %}
        <div class="add-container">
            <div class="add-container-body">
                <div class="image-container">
                    {% if images[ad.id] is defined %}
                        <img src="{{ asset(images[ad.id]) }}">
                    {% else %}
                        <img src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcT_rZyqGvG9j66DrsMPaQRVNp2QIhqnvmNavaUI_yJ4StU6LyO92VDAQg">
                    {% endif %}
                </div>
                <div class="description-container">
                    <div class="ad-title">{{ ad.title }}</div>
                    <div class="ad-location">Walthamstow, London</div>
                    <div class="ad-price">&pound;{{ ad.rent }}</div>
                </div>
                <div class="action-container">
                    <ul>
                        <li>Promote Ad</li>
                        <li>Ad Statistics</li>
                        <li><a href="{{  path('edit_add',{'id': ad.id})}}">Modify</a></li>
                        <li>
                            {% if ad.status.name == 'archived' %}
                                Archived
                            {% else %}
                                <a href="{{  path('ad_delete',{'id': ad.id})}} disabled">Archive</a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
            <div class="add-container-footer">
            </div>
        </div>
    {% endfor %}
{% endblock %}