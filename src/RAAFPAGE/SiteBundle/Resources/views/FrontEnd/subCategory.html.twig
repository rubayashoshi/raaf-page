{% extends 'RAAFPAGEUserBundle::layout.html.twig' %}

{% block title %}RaafPage - Welcome to Raaf page{% endblock %}
{% block content %}
    <div class="site-home-page">
        <div class="home-page-right">
            {% for ad in ads %}
                <div class="add-container">
                    <div class="add-container-body">
                        <div class="image-container">
                            {% if images[ad.id] is defined %}
                                <img src="{{ asset(images[ad.id]) }}">
                            {% else %}
                                <img src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcT_rZyqGvG9j66DrsMPaQRVNp2QIhqnvmNavaUI_yJ4StU6LyO92VDAQg">
                            {% endif %}
                        </div>
                        <div class="description-container">
                            <div class="ad-title">{{ ad.title }}</div>
                            <div class="ad-location">Walthamstow, London</div>
                            <div class="ad-price">&pound;{{ ad.rent }}</div>
                        </div>
                        <div class="action-container">
                            <ul>
                                <li>Promote Ad</li>
                                <li>Ad Statistics</li>
                                <li><a href="{{  path('edit_add',{'id': ad.id})}}">Modify</a></li>
                                <li>
                                    {% if ad.status.name == 'archived' %}
                                        Archived
                                    {% else %}
                                        <a href="{{  path('ad_delete',{'id': ad.id})}} disabled">Archive</a>
                                    {% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="add-container-footer">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}