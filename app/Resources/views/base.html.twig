<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <title>{% block title %}HR PROJECT{% endblock %} - HR PROJECT</title>
        {% block stylesheets %}
            <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('css/registration.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block layout_css %}{% endblock %}
        {% block page_css %}{% endblock %}
        {% block menu_css %}{% endblock %}
    </head>
    <body>

    <div id="container">
        <div id="header">
            <div class="header-left">
                <a href="{{ path('raafpage_site_homepage') }}">RAAF PAGE</a>
            </div>
            <div class="header-right">
                <div id="post-an-add"><a href="{{ path('post-an-ad') }}">Post An Ad</a></div>
                {% if app.user %}
                    <a href="{{path('logout')}}">LOGOUT</a>
                {% else %}
                    <a href="{{ path('login') }}">Customer login</a>
                {% endif %}
            </div>
        </div>
        <div id="navigation">
            {% block navigation %}{% endblock %}
        </div>
        <div id="content-container">
            <div id="content">
                {% block content %}{% endblock %}
            </div>

            {% block aside %}{% endblock %}

            <div id="footer">
                <a href="">About us</a> | <a href="">Contact US</a> | <a href="">privacy Policy</a> |
            </div>
            <div id="copy-right">
                Copyright Â© 2015 Raaf Page, UK. All rights reserved.
            </div>
        </div>
    </div>



        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
